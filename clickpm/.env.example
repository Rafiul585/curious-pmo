# Development Environment Variables
# Copy this file to .env and update values as needed

# Django Settings
DEBUG=1
SECRET_KEY=your-secret-key-here-generate-a-new-one-for-production
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,[::1]

# Database Configuration
# Set DATABASE=sqlite to use SQLite (default for local dev)
# Set DATABASE=postgres to use PostgreSQL
DATABASE=sqlite

# PostgreSQL Settings (only needed if DATABASE=postgres)
POSTGRES_DB=clickpm
POSTGRES_USER=clickpm_user
POSTGRES_PASSWORD=your-db-password
SQL_ENGINE=django.db.backends.postgresql
SQL_DATABASE=clickpm
SQL_USER=clickpm_user
SQL_PASSWORD=your-db-password
SQL_HOST=db
SQL_PORT=5432

# Django Superuser (for initial setup with createsuperuser command)
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@example.com
DJANGO_SUPERUSER_PASSWORD=your-admin-password

# Email Settings (optional - for notifications)
# EMAIL_BACKEND=smtp
# EMAIL_HOST=smtp.gmail.com
