# Production Environment Variables
# Copy this file to .env.prod and fill in the values

# Django Settings
DEBUG=0
SECRET_KEY=your-super-secret-key-generate-with-python-secrets-module
DJANGO_ALLOWED_HOSTS=api.yourdomain.com www.api.yourdomain.com

# Database
POSTGRES_DB=clickpm_prod
POSTGRES_USER=clickpm_user
POSTGRES_PASSWORD=your-strong-database-password
SQL_ENGINE=django.db.backends.postgresql
SQL_DATABASE=clickpm_prod
SQL_USER=clickpm_user
SQL_PASSWORD=your-strong-database-password
SQL_HOST=db
SQL_PORT=5432

# CORS - List of allowed frontend origins (comma-separated)
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Frontend URL for password reset emails
FRONTEND_URL=https://yourdomain.com

# Email Settings
EMAIL_BACKEND=smtp
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
EMAIL_USE_TLS=True
EMAIL_USE_SSL=False
DEFAULT_FROM_EMAIL=noreply@yourdomain.com
EMAIL_NOTIFICATIONS_ENABLED=True

# Security (set to False if behind a reverse proxy that handles SSL)
SECURE_SSL_REDIRECT=True

# Django Superuser (for initial setup)
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@yourdomain.com
DJANGO_SUPERUSER_PASSWORD=your-admin-password
